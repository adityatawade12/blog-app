<%- include('partials/header') -%>
<main>
    <link rel="stylesheet" href="/css/blogPost.css">

    <div class="container">
        <h3>Update Blog</h3>
      <br>
            <div class="row">
                <form class="col s12" action="/blogs/<%=blog._id %>/edit?_method=PUT" method="post">
                  <div class="row">
                    <div class="input-field col s12">
                      <input  id="author" type="text" name="author" class="validate" value="<%= blog.author %>">
                      <label for="author">Author</label>
                    </div>
                    
                  </div>
                 
                  <div class="row">
                    <div class="input-field col s12">
                      <input  id="title" type="text" name="title" class="validate" value="<%= blog.title %>">
                      <label for="title">Title</label>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input  id="img" type="text" name="img" class="validate" value="<%= blog.img %>">
                      <label for="img">Image Link</label>
                    </div>
                    
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="textarea1" name="blog" class="materialize-textarea" ><%= blog.blog %></textarea>
                      <label for="textarea1">Blog</label>
                    </div>
                  </div>
                  
                  
                  <button class="btn waves-effect waves-light orange" type="submit" name="action">Update
                    <i class="material-icons right">send</i>
                  </button>
                 
                <button data-target="modal1" class="btn waves-effect waves-light red modal-trigger" type="button" href="#modal1" name="action">Delete
                    <i class="material-icons right">delete</i>
                  </button>
                </form>
                

                <!-- Modal Structure -->
                <div id="modal1" class="modal">
                  <div class="modal-content">
                    <h4>Alert!</h4>
                    <p>Do you really want to delete the blog?</p>

                  </div>
                  <div class="modal-footer">
                   
                     <form action="/blogs/<%=blog._id %>?_method=DELETE" method="post">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">No, go back</a>
                        <button  class="btn waves-effect waves-light red" type="submit"  >Delete
                            <i class="material-icons right">delete</i>
                          </button>

                </form>
                  </div>
                </div>
                        
              </div>
            
        
       

    <br><br>
    </div>
    <script>
          document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.modal');
    var instances = M.Modal.init(elems);
  });


    </script>
    
</main>
<%- include('partials/footer') -%>